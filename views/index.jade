			div(id="dash_sentiment" class="tab-pane fade in")
				.row
					.col-md-1
					.col-md-3
						h3 Bullying, Harassment and Discrimination
					.col-md-3
					.col-md-3
					.col-md-1
				.row
					.col-md-1
					.col-md-9
						#sentiment_chart
					.col-md-1

			div(id="story" class="tab-pane fade in")
