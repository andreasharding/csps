					.col-md-1
					.col-md-10
						form(data-bind="foreach: organisations")
							div
								input(type="checkbox" data-bind="value: $data; checked: current_cluster;")
								span(data-bind="text: $data")
					.col-md-1
						div(id="comparison_own_choice_orgs")
							form(data-bind="foreach: current_cluster")
								li(data-bind="text: $data")

						

			div(id="compare_self" class="tab-pane fade in")
				.row
					.col-md-1
					.col-md-3
