extends layout

block content
	.container-fluid
		.row
			.col-md-1
			.col-md-10
				h2= title
					span :&nbsp;
					span(data-bind="text: current_organisation")
					span &nbsp;
					span(data-bind="text: current_year")
			.col-md-1
				.form-group(id="org_year_sel_top")
					select(class="form-control small_menu" id="org_sel_top" data-bind="options: organisations, value: current_organisation, event:{ change: $root.organisation_changed}")
					select(class="form-control small_menu" id="year_sel_top" data-bind="options: survey_years, value: current_year")
		.row(id="first_row")
			.col-md-1
			.col-md-7
				ul(class="nav nav-pills")
					li(class="active")
						a(data-toggle="pill" href="#intro") Intro
					
					li(class="dropdown")
						a(class="dropdown-toggle" data-toggle="dropdown" href="#") Comparisons
							span(class="caret")
							ul(class="dropdown-menu")
								li
									a(data-toggle="pill" href="#compare_suggest") Let system suggest comparison group
								li
									a(data-toggle="pill" href="#compare_choose") Choose group to compare with
								li
									a(data-toggle="pill" href="#compare_self") Compare self over time
					
					li(class="dropdown")
						a(class="dropdown-toggle" data-toggle="dropdown" href="#") Explore
							span(class="caret")
							ul(class="dropdown-menu")
								li
									a(data-toggle="pill" href="#dash_overview") Overview
								li
									a(data-toggle="pill" href="#dash_performance") Performance
								// li
									a(data-toggle="pill" href="#dash_profile") Profile
								li
									a(data-toggle="pill" href="#dash_demographics") Demographics
								// li
									a(data-toggle="pill" href="#dash_sentiment") Bullying, Harassment and Discrimination
						
					li(class="dropdown")
						a(class="dropdown-toggle" data-toggle="dropdown" href="#") Test
							span(class="caret")
							ul(class="dropdown-menu")
								li
									a(data-toggle="pill" href="#test_clusters") Clusters
						
			.col-md-1
			.col-md-1
			.col-md-1
			.col-md-1
		.row
			.col-md-1
			.col-md-10
				span &nbsp;
			.col-md-1

		.tab-content
			div(id="intro" class="tab-pane fade in active")
				.row
					.col-md-1
					.col-md-10
						.well
							h3 Compare
							.container-fluid
								.col-md-4 Compare to similar/other organisations, or  compare with previous results.
								.col-md-4 First, select the main organisation, and the year:
									.form-group(id="org_year_sel")
										select(class="form-control" id="org_sel" data-bind="options: organisations, value: current_organisation")
										select(class="form-control" id="year_sel" data-bind="options: survey_years, value: current_year")
								.col-md-4 <a href="#compare_suggest" data-toggle="pill" id="suggest_link">Suggest comparison group <span class="glyphicon glyphicon-arrow-right"></span></a><br /><a href="#compare_choose" data-toggle="pill">Let me choose other organisations <span class="glyphicon glyphicon-arrow-right"></span></a><br /><a href="#compare_self" data-toggle="pill">Compare own results over time <span class="glyphicon glyphicon-arrow-right"></span></a>
					.col-md-1
				.row
					.col-md-1
					.col-md-10
						.well
							h3 Explore
							.container-fluid
								.col-md-4
									span Interactive exploration of the data.
								.col-md-4
									a(data-toggle="pill" href="#dash_overview") Overview <span class="glyphicon glyphicon-arrow-right"></span>
									br
									a(data-toggle="pill" href="#dash_demographics") Demographics <span class="glyphicon glyphicon-arrow-right"></span>
									br
									a(data-toggle="pill" href="#dash_performance") Performance <span class="glyphicon glyphicon-arrow-right"></span>
									br
									a(data-toggle="pill" href="#dash_profile") Profile <span class="glyphicon glyphicon-arrow-right"></span>
									br
									a(data-toggle="pill" href="#dash_sentiment") Bullying, Harassment and Discrimination <span class="glyphicon glyphicon-arrow-right"></span>
								.col-md-4
					.col-md-1

			div(id="dash_overview" class="tab-pane fade in")
				.row
					.col-md-1
					.col-md-3
						h3 Overview
							span : #{organisation}
					.col-md-3
					.col-md-3
					.col-md-1
			
				.row
					.col-md-4
						h4 Drivers of engagement
					.col-md-4
						h4 Annual change in headcount
					.col-md-4
						h4 Demographics overview
				.row
					.col-md-4
						#engagement_drivers
					.col-md-4
						#headcount_change_chart
					.col-md-1
						#demographics_overview_gender
					.col-md-1
						#demographics_overview_ethnicity
					.col-md-1
						#demographics_overview_sexuality
					.col-md-1
				.row
					.col-md-4
						h4 Bullying & Harassment
					.col-md-4
						h4 Discrimination
					.col-md-4
						h4 Wellbeing
				.row
					.col-md-4
						#bullying_harassment_chart
					.col-md-4
						#discrimination_chart
					.col-md-4
						#wellbeing_chart
			
			div(id="dash_performance" class="tab-pane fade in")
				.row
					.col-md-1
					.col-md-10
